{
    "compilerOptions": {
        "target": "ES2019",
        "module": "esnext",
        "lib": [
            "dom",
            "es2015",
            "es2016",
            "es2017"
        ],
        "baseUrl": ".",
        "allowJs": false,
        "jsx": "react",
        "strict": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictPropertyInitialization": false,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "plugins": [
            {
                "name": "typescript-plugin-css-modules"
            }
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}