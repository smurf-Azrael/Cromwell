{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2016",
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017"
    ],
    "sourceMap": true,
    "strict": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "jsx": "react"
  },
  "exclude": [
    "node_modules",
    ".next",
    "**/*.scss",
    "**/*.tsx"
  ],
  "include": [
    "src/**/*.ts",
  ],
}