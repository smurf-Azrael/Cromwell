{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": [
            "dom",
            "es2015",
            "es2016",
            "es2017"
        ],
        "allowJs": true,
        "jsx": "react",
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictPropertyInitialization": false,
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*.ts",
        "index.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}