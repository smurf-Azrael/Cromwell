{
    "name": "cromwell",
    "private": true,
    "scripts": {
        "startup": "node ./startup.js",
        "startSystem": "node ./system/manager/src/manager.js start",
        "dev": "node ./system/manager/src/manager.js dev",
        "winDev": "node ./system/manager/src/manager.js winDev",
        "cromwellaDev": "npx cromwella",
        "cromwellaDevForce": "npx cromwella --env=development -f",
        "cromwellaProd": "npx cromwella --env=production",
        "lerna": "npx lerna bootstrap --hoist",
        "clean": "node ./system/manager/src/cleanup.js",
        "winRemoveNodeModules": "rmdir /Q /S \"./node_modules\"",
        "buildCore": "npm run build --prefix ./system/core/common && npm run build --prefix ./system/core/backend && npm run build --prefix ./system/core/frontend"
    }
}