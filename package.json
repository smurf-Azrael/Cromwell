{
    "name": "@cromwell/main",
    "version": "1.0.0",
    "main": "startup.js",
    "private": true,
    "scripts": {
        "startup": "node ./startup.js",
        "startSystem": "node ./system/manager/startup.js production",
        "dev": "node ./system/manager/startup.js development",
        "winDev": "node ./system/manager/src/utils/windowsDev.js",
        "cromwellaDev": "npx cromwella i",
        "cromwellaDevForce": "npx cromwella i -f",
        "cromwellaProd": "npx cromwella i --production",
        "cromwellaBundle": "npx cromwella b --production",
        "clean": "node ./system/manager/src/utils/cleanup.js",
        "winRemoveNodeModules": "rmdir /Q /S \"./node_modules\"",
        "cromwellaNoCli": "node ./system/cromwella/bin/cromwella.js i",
        "buildCore": "npm run build --prefix ./system/core/common && npm run build --prefix ./system/core/backend && npm run build --prefix ./system/core/frontend"
    },
    "workspaces": [
        "system/*",
        "system/core/*",
        "plugins/*",
        "themes/*"
    ],
    "cromwell": {
        "themes": [
            "@cromwell/theme-store"
        ]
    }
}