{
  "version": "1.0.0",
  "npmClient": "npm",
  "command": {
    "publish": {
      "ignoreChanges": [
        "*.md"
      ],
      "registry": "https://npm.pkg.github.com",
      "message": "chore(release): publish"
    },
    "bootstrap": {
      "npmClientArgs": [
        "--no-package-lock"
      ]
    }
  },
  "packages": [
    "system/*",
    "system/core/*",
    "plugins/*",
    "themes/*"
  ]
}