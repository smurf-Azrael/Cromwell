{
    "version": "1.0.0",
    "npmClient": "npm",
    "command": {
        "publish": {
            "message": "chore(release): publish",
            "registry": "https://npm.pkg.github.com"
        },
        "bootstrap": {
            "ignore": "component-*",
            "npmClientArgs": [
                "--no-package-lock"
            ]
        }
    },
    "packages": [
        "system/*",
        "system/core/*",
        "plugins/*",
        "themes/*"
    ]
}
