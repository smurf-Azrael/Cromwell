{
  "version": "1.0.0",
  "npmClient": "npm",
  "command": {
    "publish": {
      "ignoreChanges": [
        "*.md"
      ],
      "registry": "https://npm.pkg.github.com",
      "message": "chore(release): publish"
    },
    "bootstrap": {
      "ignore": "component-*",
      "npmClientArgs": [
        "--no-package-lock"
      ]
    }
  },
  "packages": [
    "system/core/common",
    "system/core/backend",
    "system/core/frontend",
    "system/renderer",
    "system/server",
    "system/admin-panel",
    "plugins/*",
    "themes/*"
  ]
}